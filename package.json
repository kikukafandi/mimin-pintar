{
  "name": "mimin-pintar",
  "version": "1.0.0",
  "description": "WhatsApp Bot AI Dashboard",
  "main": "dist/electron.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && electron .",
    "dist": "tsc && electron-builder"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "ai"
  ],
  "author": "Afandi",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@whiskeysockets/baileys": "^6.6.0",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "pino": "^8.19.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.30",
    "@types/qrcode": "^1.5.5",
    "electron": "^32.0.0", 
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.mimin.pintar",
    "productName": "Mimin Pintar",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "icon": "public/icon.ico"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
